<% if @restaurant.image.attached? %>
  <%= image_tag @restaurant.image, style: "width: 200px; display: block" %>
<% end %>


<p id="notice"><%= notice %></p>

<% if current_user && current_user.id == @restaurant.user_id %>
  <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<% end %>
<%= link_to 'Back', restaurants_path %>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>
    Average Rating: <%= @restaurant.avg_rating if @reviews.any? %>
  </strong>
</p>

<p>
  <strong>User:</strong>
  <%= @restaurant.user_id %>
</p>

<%= render 'reviews/form' %>
<h2>Reviews</h2>
<div id="restrevs">
  <%= render @restaurant.order_reviews if @reviews.any? %>
</div>
